@model Flow_App.Models.TaskItem
@{
    ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="datetime-local" class="form-control"
               value="@(Model.DueDate.HasValue? Model.DueDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Priority"></label>
        <select asp-for="Priority" class="form-control">
            <option value="2" selected="@(Model.Priority == Flow_App.Models.TaskPriority.High)">High</option>
            <option value="1" selected="@(Model.Priority == Flow_App.Models.TaskPriority.Medium)">Medium</option>
            <option value="0" selected="@(Model.Priority == Flow_App.Models.TaskPriority.Low)">Low</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CourseId">Course (Optional)</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses">
            <option value="">-- No Course --</option>
        </select>
    </div>

    <!-- Reminder Fields -->
    <div class="form-group mb-3">
        <div class="form-check">
            <input asp-for="ReminderEnabled" class="form-check-input" type="checkbox" id="ReminderEnabled" />
            <label asp-for="ReminderEnabled" class="form-check-label">Enable Reminder</label>
        </div>
    </div>

    <div class="form-group mb-3" id="reminderDiv">
        <label>Remind me:</label>
        <div class="input-group">
            <input asp-for="ReminderValue" class="form-control" type="number" min="1" value="@Model.ReminderValue" />
            <select asp-for="ReminderUnit" class="form-select">
                <option value="minutes" selected="@(Model.ReminderUnit == "minutes")">Minutes</option>
                <option value="hours" selected="@(Model.ReminderUnit == "hours")">Hours</option>
                <option value="days" selected="@(Model.ReminderUnit == "days")">Days</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const reminderCheckbox = document.getElementById("ReminderEnabled");
        const reminderDiv = document.getElementById("reminderDiv");

        function toggleReminderDiv() {
            reminderDiv.style.display = reminderCheckbox.checked ? "block" : "none";
        }

        if (reminderCheckbox && reminderDiv) {
            reminderCheckbox.addEventListener("change", toggleReminderDiv);
            toggleReminderDiv(); // initial state
        }
    </script>
}