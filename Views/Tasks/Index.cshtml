@model IEnumerable<Flow_App.Models.TaskItem>

@{
    ViewData["Title"] = "Tasks";
}

<h1>My Tasks</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">Manage Courses</a>
</p>

<!-- Course Filter -->
<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <select name="courseId" class="form-control" onchange="this.form.submit()">
                    <option value="">All Courses</option>
                    @foreach (var course in ViewBag.Courses as List<Flow_App.Models.Course>)
                    {
                        <option value="@course.Id" selected="@(ViewBag.SelectedCourseId == course.Id)">
                            @course.Name
                        </option>
                    }
                </select>
                @if (ViewBag.SelectedCourseId != null)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear Filter</a>
                }
            </div>
        </form>
    </div>
</div>

@if (ViewData["FilteredCourse"] != null)
{
    <div class="alert alert-info">
        Showing tasks for: <strong>@ViewData["FilteredCourse"]</strong>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No tasks found. <a asp-action="Create">Create your first task!</a>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Course</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        <strong>@task.Title</strong>
                        @if (!string.IsNullOrEmpty(task.Description))
                        {
                            <br />
                            <small class="text-muted">@task.Description</small>
                        }
                    </td>
                    <td>
                        @if (task.Course != null)
                        {
                            <span class="badge bg-info">@task.Course.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">No course</span>
                        }
                    </td>
                    <td>
                        @if (task.DueDate.HasValue)
                        {
                            @task.DueDate.Value.ToString("MMM dd, yyyy")

                            @if (task.DueDate.Value.Date < DateTime.Now.Date)
                            {
                                <span class="badge bg-danger">Overdue</span>
                            }
                            else if (task.DueDate.Value.Date == DateTime.Now.Date)
                            {
                                <span class="badge bg-warning">Due Today</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No due date</span>
                        }
                    </td>
                    <td>
                        @switch (task.Priority)
                        {
                            case Flow_App.Models.TaskPriority.High:
                                <span class="badge bg-danger">High</span>
                                break;
                            case Flow_App.Models.TaskPriority.Medium:
                                <span class="badge bg-warning">Medium</span>
                                break;
                            case Flow_App.Models.TaskPriority.Low:
                                <span class="badge bg-secondary">Low</span>
                                break;
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id"
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script>
            @if (ViewBag.TasksWithReminder != null)
            {
                    @:const tasksData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TasksWithReminder));
                    @:
                    @:function getShownNotifications() {
                    @:    try {
                    @:        const shown = localStorage.getItem('shownTaskNotifications');
                    @:        if (!shown) return {};
                    @:        const parsed = JSON.parse(shown);
                    @:        const cleaned = {};
                    @:        for (const [key, value] of Object.entries(parsed)) {
                    @:            if (key.includes('_')) cleaned[key] = value;
                    @:        }
                    @:        if (Object.keys(cleaned).length !== Object.keys(parsed).length) {
                    @:            localStorage.setItem('shownTaskNotifications', JSON.stringify(cleaned));
                    @:        }
                    @:        return cleaned;
                    @:    } catch (e) { return {}; }
                    @:}
                    @:
                    @:function markNotificationAsShown(taskId, reminderTime) {
                    @:    try {
                    @:        const shown = getShownNotifications();
                    @:        const key = taskId + "_" + reminderTime;
                    @:        shown[key] = new Date().toISOString();
                    @:        localStorage.setItem('shownTaskNotifications', JSON.stringify(shown));
                    @:    } catch (e) { }
                    @:}
                    @:
                    @:function hasNotificationBeenShown(taskId, reminderTime) {
                    @:    const shown = getShownNotifications();
                    @:    const key = taskId + "_" + reminderTime;
                    @:    return key in shown;
                    @:}
                    @:
                    @:function showOverlayNotification(title, body) {
                    @:    const container = document.getElementById("notificationContainer");
                    @:    if (!container) return;
                    @:    const notif = document.createElement("div");
                    @:    notif.className = "task-notification alert alert-warning shadow";
                    @:    notif.style.cssText = "margin-bottom: 10px; animation: slideIn 0.5s ease-out;";
                    @:    notif.innerHTML = "<strong>⏰ " + title + "</strong><p style='margin-bottom: 0; margin-top: 5px;'>" + (body || '') + "</p>";
                    @:    container.appendChild(notif);
                    @:    setTimeout(() => {
                    @:        notif.style.animation = "slideOut 0.3s ease-out";
                    @:        setTimeout(() => { if (container.contains(notif)) container.removeChild(notif); }, 300);
                    @:    }, 10000);
                    @:}
                    @:
                    @:function showBrowserNotification(title, body, taskId, reminderTime) {
                    @:    if ("Notification" in window && Notification.permission === "granted") {
                    @:        new Notification("⏰ " + title, { body: body || 'Task reminder', icon: "/icon.png", requireInteraction: false });
                    @:    }
                    @:    showOverlayNotification(title, body);
                    @:    markNotificationAsShown(taskId, reminderTime);
                    @:}
                    @:
                    @:if ("Notification" in window && Notification.permission === "default") {
                    @:    Notification.requestPermission();
                    @:}
                    @:
                    @:const now = new Date();
                    @:tasksData.forEach(task => {
                    @:    if (!task.reminderEnabled || !task.reminderTime) return;
                    @:    const reminderDate = new Date(task.reminderTime);
                    @:    const delay = reminderDate - now;
                    @:    const reminderTimeStr = task.reminderTime;
                    @:    if (hasNotificationBeenShown(task.id, reminderTimeStr)) return;
                    @:    if (delay <= 0 && delay > -86400000) {
                    @:        const hoursAgo = Math.abs(Math.floor(delay / 3600000));
                    @:        const minutesAgo = Math.abs(Math.floor((delay % 3600000) / 60000));
                    @:        let timeMsg = hoursAgo > 0 ? "Due " + hoursAgo + " hour" + (hoursAgo > 1 ? 's' : '') + " ago" : minutesAgo > 0 ? "Due " + minutesAgo + " minute" + (minutesAgo > 1 ? 's' : '') + " ago" : 'Due now';
                    @:        const message = task.description ? task.description + " - " + timeMsg : timeMsg;
                    @:        showBrowserNotification(task.title, message, task.id, reminderTimeStr);
                    @:    } else if (delay > 0 && delay <= 3600000) {
                    @:        setTimeout(() => {
                    @:            if (!hasNotificationBeenShown(task.id, reminderTimeStr)) {
                    @:                showBrowserNotification(task.title, task.description || 'Task is due soon', task.id, reminderTimeStr);
                    @:            }
                    @:        }, delay);
                    @:    }
                    @:});
            }
        </script>
    }
    
}