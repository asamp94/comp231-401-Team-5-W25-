@model Flow_App.Models.Course
<!---->
@{
    ViewData["Title"] = "Create Course";
}

<h1>Create New Course</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Course Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g., COMP 231 - Software Development" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create Course" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}